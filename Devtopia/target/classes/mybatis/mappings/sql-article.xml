<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="article">
	<insert id="insert">
		<!-- insert into article values(idx_seq.nextval, #{writer}, #{title}, #{content}, sysdate, 0) -->
		insert into article values(idx_seq.nextval, 'myId', #{title}, #{content}, sysdate, 0)
	</insert>
	
	<select id="select" resultType="Article">
		select * from article where postno = (select max(postno) from article)
	</select>
	
	<delete id="delete">
		delete article where postno = #{postNo}
	</delete>
	
	<update id="update">
		<!-- update article set writer = #{}, title = #{}, content = #{}, writeDate = sysdate where postno = (select max(postno) from article) -->  
		update article set title = #{title}, content = #{content}, writeDate = sysdate where postno = (select max(postno) from article)  
	</update>


</mapper>
