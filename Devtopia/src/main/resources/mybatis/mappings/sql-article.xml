<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="article">
	<resultMap type="Article" id="articleList">
		<result property="postNo" column="POSTNO"/>
		<result property="writer" column="WRITER"/>
		<result property="title" column="TITLE"/>
		<result property="content" column="CONTENT"/>
		<result property="writeDate" column="WRITEDATE"/>
		<result property="viewCount" column="VIEWCOUNT"/>
	</resultMap>

	<insert id="insert">
		<!-- insert into article values(idx_seq.nextval, #{writer}, #{title}, #{content}, sysdate, 0) -->
		insert into article values(idx_seq.nextval, 'myId', #{title}, #{content}, sysdate, 0)
	</insert>
	
	<select id="select" resultType="Article">
		select * from article where postno = (select max(postno) from article)
	</select>
	
	<delete id="delete">
		delete article where postno = #{postNo}
	</delete>
	
	<update id="update">
		<!-- update article set writer = #{}, title = #{}, content = #{}, writeDate = sysdate where postno = (select max(postno) from article) -->  
		update article set title = #{title}, content = #{content}, writeDate = sysdate where postno = (select max(postno) from article)  
	</update>
	
	<update id="ArticleCountUp">
		update article set VIEWCOUNT = (select viewcount from article where postno = #{postNo}) where postno = #{postNo}
	</update>
	
	<select id="getArticleList" resultMap="articleList">
		select * from article
	</select>

</mapper>
